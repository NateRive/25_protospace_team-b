.col-sm-4.col-md-3.proto-content
  .thumbnail
    = link_to image_tag(prototype.set_main_thumbnail), prototype_path(prototype)
    .caption
      %h3
        = prototype.title
      .proto-delete
        - if user_signed_in? && current_user.id == prototype.user_id
          %i.fas.fa-edit
          = link_to "/prototypes/#{prototype.id}", method: :delete, data: {confirm: :'本当に削除しますか？'} do
            %i.fas.fa-trash-alt
      .proto-meta
        .proto-user
          = link_to prototype.user.name, user_path(prototype.user)
        .proto-posted
          = prototype.posted_date

